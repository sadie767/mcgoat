<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Mcgoat</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Indie+Flower" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet">
  </head>
  <body>
      <nav class="navbar navbar-default" id="fixed">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Home</a>
          </div>
            <ul class="nav navbar-nav navbar-right">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Goats<span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Bucks", bucks_path %></li>
                  <li><%= link_to "Does", does_path %></li>
                  <li><%= link_to "Juniors", juniors_path %></li>
                  <li role="separator" class="divider"></li>
                  <li><a href="http://www.adgagenetics.org/PedigreeSearch.aspx">Pedigree</a></li>
                </ul>
              </li>
              <li><%= link_to 'Shop', '/products' %></li>
              <li><%= item_total %><%= link_to 'Item(s) in Cart', '/cart' %><li>
              <li><span class="total"><%=  number_to_currency current_order.total_price %></span><li>
              <% if current_user %>
                <li><%= link_to('Edit User', edit_user_registration_path) %></li>
              <% end %>

              <% if current_user %>
                <li><%= link_to('Logout', destroy_user_session_path, method: :delete) %></li>
              <% else %>
                <li><%= link_to('Login', new_user_session_path) %></li>
                <li><%= link_to('Register', new_user_registration_path) %></li>
              <% end %>
            </ul>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>
      <div class="container">
        <h4 class="notice" id="notice"><%= notice %></h4>
        <h4 class="alert" id="alert"><%= alert %></h4>
        <%= yield %>
      </div>
  </body>
  <footer class="footer">
    <div class="container">
      <a class="padding" href="http://adga.org/"><%= image_tag 'agda.gif', :width => '40' %></a>
      <a class="padding" href="http://www.udga.org/"><%= image_tag 'udga.svg', :width => '30' %></a>
      <a class="padding" href="http://www.americangoatsociety.com/"><%= image_tag 'ags.jpg', :width => '25' %></a>
      <div class="nav navbar-nav navbar-right">
        <li class="text-muted"><%= link_to 'Admin', user_session_path %></li>
        <% if current_user %>
        <li><%= link_to('Logout', destroy_user_session_path, method: :delete) %></li>
        <% end %>
      </ul>
    </div>
  </footer>
</html>
