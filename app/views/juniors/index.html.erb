<h1>Show Juniors</h1>
<div class="row">
  <% @juniors.each do |junior| %>
  <div class="col-md-4">
    <%= image_tag('junior.jpg', :width =>'150') %>
    <li><%= link_to junior.name, junior_path(junior) %></li>
    <li><%= number_to_currency junior.price %></li>
    </div>
  <% end %>
</div>
<h3><%= link_to 'New Junior', new_junior_path %></h3>
