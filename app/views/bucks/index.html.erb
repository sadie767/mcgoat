<h1>Show Bucks</h1>
<div class="row">
  <% @bucks.each do |buck| %>
  <div class="col-md-4">
    <div class="circle"><%= image_tag('goat.jpg', :width =>'150') %></div>
    <li><%= link_to buck.name, buck_path(buck) %></li>
    <li><%= number_to_currency buck.price %></li>
    </div>
  <% end %>
</div>
<h3><%= link_to 'New Buck', new_buck_path %></h3>
